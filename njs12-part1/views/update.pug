doctype html
html
  head
    meta(charset="utf-8")
    style.
      * {
          font-family: sans-serif;
        }
      input[type="text"], textarea {
        display: block;
        padding: 4px;
        margin-bottom: 16px;
      }
    title Update Story
  body
    h1 Update Story
    small &nbsp;
      a(href="/") back
    hr
    
    form(method="post", action=`/update/${story._id}`)
      label(for="title") Title
      input(type="text", name="stitle", value= story.stitle, placeholder="Title", size="34", id="title")
      
      label(for="content") Content
      textarea(cols="40", rows="8", name="scontent", placeholder="Story", id="content")= story.scontent
      
      input(type="submit", value="Update")
